<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.example.ilcarro.R"/>
        <variable
            name="viewModel"
            type="com.example.ilcarro.ui.viewModels.userFlow.LogInAndSignUpViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.userFlow.LogInAndSignUpFragment">

        <TextView
            android:id="@+id/log_in_and_sign_up_welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/arbutus_slab"
            android:text="@string/log_in_and_sign_up_welcome_text"
            android:textColor="@color/colorWhite"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sign_up_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:onClick="@{() -> viewModel.setNewDestination(R.id.action_to_SignUp)}"
            android:text="@string/log_in_and_sign_up_sign_up_button_text"
            app:layout_constraintEnd_toEndOf="@+id/log_in_and_sign_up_welcome_text"
            app:layout_constraintStart_toStartOf="@+id/log_in_and_sign_up_welcome_text"
            app:layout_constraintTop_toBottomOf="@+id/log_in_and_sign_up_welcome_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/log_in_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:onClick="@{() -> viewModel.setNewDestination(R.id.action_to_logIn)}"
            android:text="@string/log_in_and_sign_up_log_in_button_text"
            app:layout_constraintEnd_toEndOf="@+id/sign_up_button"
            app:layout_constraintStart_toStartOf="@+id/sign_up_button"
            app:layout_constraintTop_toBottomOf="@+id/sign_up_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>